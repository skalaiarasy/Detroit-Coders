Discription: Index.cshtml is a autogenerated VS code which is further customized to maintain theme and added more profile fields to the web application.
*@

@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    body {
        background-color: azure;
    }
</style>

<br />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <form id="profile-form" method="post">
                <br />
                <div class="row">
                    <div class="col-md-6 form-group offset-md-5 align-content-md-center text-info" ><h2>My Profile</h2></div>
                </div>
                <partial name="_StatusMessage" model="Model.StatusMessage" />
                <br />
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Username" class="col-form-label">Username / Email</label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber" class="col-form-label">Phone</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Input.FirstName" class="col-form-label">First Name</label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Input.LastName" class="col-form-label">Last Name</label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Input.StreetAddress" class="col-form-label">Street Address</label>
                            <input asp-for="Input.StreetAddress" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Input.City" class="col-form-label">City</label>
                            <input asp-for="Input.City" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Input.State" class="col-form-label">State</label>
                            <input asp-for="Input.State" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="Input.Zipcode" class="col-form-label">Zip Code</label>
                            <input asp-for="Input.Zipcode" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                @if (!User.IsInRole("ApplicationAdmin"))
                {
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="Input.Skills" class="col-form-label">Skills</label>
                                <input asp-for="Input.Skills" class="form-control" />
                                <span asp-validation-for="Input.Skills" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="Input.YearsOfExperience" class="col-form-label">Years of Experience</label>
                                <input asp-for="Input.YearsOfExperience" class="form-control" />
                                <span asp-validation-for="Input.YearsOfExperience" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-1"></div>
                    </div>

                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="Input.WorkPlace" class="col-form-label">WorkPlace<span style="color:#ff0000">*</span></label>
                                @Html.DropDownListFor(s => s.Input.WorkPlace,
                                new SelectList(Model.Organizations, "Id", "Name"), "--Select One--", new { @class = "form-control" })
                                <span asp-validation-for="Input.WorkPlace" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }

                <br />
                <div class="row">
                    <div class="col-md-6 form-group offset-md-3">
                        <button type="submit" class="btn btn-primary form-control"><b>Save</b></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}