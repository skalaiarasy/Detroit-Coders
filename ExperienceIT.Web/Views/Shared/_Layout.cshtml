<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iTechVolunteers </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


</head>
<body class="search-background">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            @*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:antiquewhite; color:white;">*@
            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/techflightNew.png" />
                    </a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">



                    <div class="navbar-header pull-left">
                        <a class="nav-link active font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/Images/logo_200x200 (2).png" alt="ITech Volunteer" style="height:55px; width: 55px" />
                        </a>
                    </div>
                    @*<a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">iTechVolunteers</a>*@


                    <ul class="navbar-nav flex-md-grow-1">
                        @if (User.IsInRole("ApplicationAdmin"))
                        {
                            <li class="nav-item font-weight-bold">
                                <a class="nav-link  active " asp-area="" asp-controller="Volunteers" asp-action="Index"><h4>Volunteers</h4></a>
                            </li>

                        }
                        <li class="nav-item font-weight-bold">
                            <a class="nav-link active" asp-area="" asp-controller="Programs" asp-action="Index"><h4>Programs</h4></a>
                        </li>
                        <li class="nav-item font-weight-bold">
                            <a class="nav-link active" asp-area="" asp-controller="Events" asp-action="Index"><h4>Events</h4></a>
                        </li>
                        <li class="nav-item font-weight-bold">
                            <a class="nav-link active" asp-area="" asp-controller="Organizers" asp-action="Index"><h4>Organizers</h4></a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        @*<footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2021 - ExperienceIT.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>*@
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
